  paymentMethodId           String?  @map("payment_method_id")
  feePercent                Decimal  @db.Decimal(5, 4) @map("fee_percent")
  feeFixed                  Decimal  @db.Decimal(10, 2) @map("fee_fixed")
  monthlyFee                Decimal  @default(0) @db.Decimal(10, 2) @map("monthly_fee")
  setupFee                  Decimal  @default(0) @db.Decimal(10, 2) @map("setup_fee")
  refundFeeFixed            Decimal  @default(0) @db.Decimal(10, 2) @map("refund_fee_fixed")
  refundFeePercent          Decimal  @default(0) @db.Decimal(5, 4) @map("refund_fee_percent")
  chargebackFeeFixed        Decimal  @default(0) @db.Decimal(10, 2) @map("chargeback_fee_fixed")
  crossBorderFeePercent     Decimal  @default(0) @db.Decimal(5, 4) @map("cross_border_fee_percent")
  currencyConversionPercent Decimal  @default(0) @db.Decimal(5, 4) @map("currency_conversion_fee_percent")
  payoutFeeFixed            Decimal  @default(0) @db.Decimal(10, 2) @map("payout_fee_fixed")
  minimumFeePerTxn          Decimal? @db.Decimal(10, 2) @map("minimum_fee_per_txn")
  maximumFeePerTxn          Decimal? @db.Decimal(10, 2) @map("maximum_fee_per_txn")
  minimumTxnAmount          Decimal? @db.Decimal(10, 2) @map("minimum_txn_amount")
  maximumTxnAmount          Decimal? @db.Decimal(10, 2) @map("maximum_txn_amount")
